.main-block
	block()
	padding: 10px 16px 15px;
	@media screen and (min-width tablet)
		padding: 30px 30px 15px;


	&__text
		line-height:26px

	&__photo
		padding: 14px 0;

	&__contacts
		padding: 27px 0 23px;
		border-bottom:1px solid #bdbdbd;
		border-top:1px solid #bdbdbd;

.photo-block
	&__list
		padding:8px 0
		margin:0 -6px

	&__item
		padding: 3px
		float: left
		text-align: center;
		@media screen and (min-width tablet)
			padding: 0 6px
	&__pic
		display: block

	&__img
		height:120px
		width 186px
		@media screen and (min-width mobile)
			width:auto

		&_type
			&_vertical
				width:auto

			&_full
				width:100%
				height:auto
				@media screen and (min-width mobile)
					width:auto
					height:120px

.contacts-block
	&__map
		float: left

		&-img
			width: 316px;
			height: 200px;
			@media screen and (min-width mobile)
				width:auto

	&__address
		float: left;

.files-block
	padding: 24px 0 10px;

	&__list
		padding: 0 8px;

	&__item
		padding: 0 13px 27px
		float: left
		color: #494949;
		text-align: center
		width:50%
		@media screen and (min-width tablet)
			padding: 0 21px
			width:33%

		&:hover
			text-decoration: none
			color: color-main

	&__name
		padding-top: 10px;
		font-size: 14px

	&__link
		color: #00adff

	&__img
		width: 47px;
		height: 59px;

	&__bottom
		margin-top: -20px;
		@media screen and (min-width tablet)
			margin-top:0

.address-block
	padding: 13px 0 0
	@media screen and (min-width tablet)
		padding-left: 16px;

	&__location
		line-height: 9px;
		color: #858585
		font-style: normal;

	&__name
		line-height: 21px;
		font-family:HelveticaMedium
		@media screen and (min-width tablet)
			line-height: 17px;

	&__link
		color: #00adff