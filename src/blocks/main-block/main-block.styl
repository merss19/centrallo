.main-block
	block()
	padding: 30px 30px 15px;

	&__text
		line-height:26px

	&__photo
		padding: 14px 0;

	&__contacts
		padding: 27px 0 23px;
		border-bottom:1px solid #bdbdbd;
		border-top:1px solid #bdbdbd;
		margin:0 -8px

.photo-block
	&__list
		padding:8px 0
		margin:0 -6px

	&__item
		padding: 0 6px
		float: left

	&__pic
		display: block

.contacts-block
	&__map-wr
		width: 316px;
		height: 200px;
		padding: 0 8px
		float: left

	&__address
		float: left;
		padding: 0 8px;

.files-block
	padding: 24px 0 10px;

	&__list
		padding: 0 8px;

	&__item
		padding: 0 21px
		float: left
		text-align: center
		color: #494949;

		&:hover
			text-decoration: none
			color: color-main

	&__name
		padding-top: 10px;
		font-size: 14px

	&__link
		color: #00adff

	&__img
		width: 47px;
		height: 59px;

.address-block
	&__location
		line-height: 9px;
		color: #858585

	&__name
		line-height: 17px;
		font-family:HelveticaMedium

	&__link
		color: #00adff