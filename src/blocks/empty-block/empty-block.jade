mixin empty-block(text,className)
	if className
		section(class = 'empty-block empty-block_type_'+className)
			div(class = 'empty-block__corner block__corner empty-block__corner_type_'+className)
				div.block__corner-inner.block__corner-inner_color_black
			div.block-bottom.clearfix
				div.block-bottom__time 2h ago
				div(class = 'block-bottom__desc block-bottom__desc_type_'+className)=text
	else
		section.empty-block
			div.block__corner
				div.block__corner-inner.block__corner-inner_color_black
			div.block-bottom.clearfix
				div.block-bottom__time 2h ago
				div.block-bottom__desc=text