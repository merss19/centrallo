mixin user-block()
	section.user-block.clearfix
		div.user-block__item.clearfix
			div.user-block__info
				div.user-block__photo
					img.user-block__pic(src = "assets/img/content/ava.png" alt="")
				div.user-block__name Konstantin Vladimirskiy
			div.user-block__links
				div.user-block__to http://cll.io/a6lnu
				div.user-block__social.social
					ul.social__list
						li.social__item
							a(href = "#").social__link.icon-soc-fb
						li.social__item
							a(href = "#").social__link.icon-soc-tw
						li.social__item
							a(href = "#").social__link.icon-soc-vk
						li.social__item
							a(href = "#").social__link.icon-soc-in

		div.user-block__btns.clearfix
			div.user-block__btn
				button(type = "button").btn Add to my Centrallo
			div.user-block__btn.hidden-lg.hidden-md.hidden-sm
				button(type = "button").btn.btn_type_share.js-modal-btn Share
		h1.user-block__title Post-release checklist
			span 2015.02.26