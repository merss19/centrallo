.header
	&__top
		background color-bg
		height 60px;

	.inner
		text-align center

	&__logo
		background url(../img/logo2x.png) no-repeat
		display block
		width 137px
		height 36px
		float left
		margin 12px 0

	&__auth
		line-height:60px

	&__log-in
		text-transform uppercase
		float right
		color #fff
		font-size 13px

	&__link
		color color-main
		margin-right: 7px;
		border-bottom 1px solid color-main

	&__sign-up
		text-align center
		text-transform uppercase
		font-size 13px
		display none
		color #a3adb3
		font-family HelveticaMedium
		@media (min-width tablet)
			display: inline-block;
			margin-right: 98px;

		&_type
			&_mobile
				color color-main
				float right
				padding-right 15px
				display: block
				@media (min-width tablet)
					display: none
.download-block
	background: color-main
	padding: 6px 0;
	height: 50px;

	&__action
		float: right
		padding-top: 5px;

	&__btn
		display: inline-block
		margin-right: 10px;
		@media (min-width tablet)
			margin-right: 23px;

		&_type
			&_close
				margin-right: -5px;
				padding-right:0
				@media (min-width tablet)
					margin-right: -9px;
	&__close
		@extend .svg-close
		position: relative;
		top: 3px;

	&__desc
		padding-left: 42px;
		float: left
		position: relative
		
		&:before
			content: ''
			display: block
			@extend .svg-download
			position: absolute
			top: 1px;
			left: -1px;

	&__name
		color: #fff
		font-size:14px
		font-family HelveticaMedium
		text-align: left

	&__text
		font-size: 11px
		color: #fff
		@media (min-width tablet)
			font-size: 12px