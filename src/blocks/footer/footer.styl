.footer
	background color-bg
	height 80px;
	line-height: 80px
	text-transform: uppercase
	color: cool-grey-two
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	min-height: 80px;

	.inner
		text-align center

	&__logo
		float left

	&__social
		float right

	&__list
		display: inline-block
		padding-left:0

	&__item
		display: inline-block
		padding:0 8px

	&__link
		color: cool-grey-two
		font-size: 12px
		font-family:HelveticaMedium
		transition all, 0.4s

		&:hover
			text-decoration: none
			color: color-main

	&__social
		float right

		&-list
			margin:0 -8px

		&-item
			display: inline-block
			padding: 0 11px 0 0

			&:last-child
				padding:0 2px

		&-link
			&:before
				transition all, 0.4s
				color: #8c9399
				font-size:18px

			&:hover
				&:before
					color: color-main

