.modal
	z-index: 22;
	position: fixed;
	padding: 0 20px
	top: 50%;
	width: 100%
	margin-top: -106px;
	display: none

	&__close
		position: absolute;
		background: transparent;
		top: -2px;
		right: 3px;
		font-size:30px

	&__inner
		background: #fff;
		border-radius: 3px;

	&__top
		text-align: center;
		font-size: 22px;
		padding: 15px 0;
		position: relative

	&__bottom
		background: #f0f5fa;
		text-align: center;
		padding: 20px 0 26px;
		border-radius: 3px;

	&__link
		color: #757e87
		font-size:20px
		margin-bottom: 35px;

	&__social
		text-align: center

		&-list
			display: inline-block;

		&-item
			float: left
			padding: 0 10px;

		&-link
			width: 36px;
			height: 36px;
			border-radius: 33px;
			background-color: #3a589c;
			display: block

			&:hover
				text-decoration: none

			&_type
				&_fb
					background: #3a589c

				&_tw
					background: #29a9e1

				&_vk
					background: #5a7ba0

				&_in
					background: #007bb8

			&:before
				color: #fff;
				line-height: 36px;


.overlay
	z-index: 3;
	position: fixed;
	background-color: #000;
	opacity: 0.5;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	cursor: pointer;
	display: none;